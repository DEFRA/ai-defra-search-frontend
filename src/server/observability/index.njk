{% extends 'layouts/page.njk' %}

{# Import GOVUK components #}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: phaseTag
    },
    html: 'This is a new service â€“ your <a class="govuk-link" href="mailto:defra.ai.search@defra.gov.uk">feedback</a> will help us to improve it.'
  }) }}
{% endblock %}

{% block content %}
  {{ appHeading({
    text: heading,
    caption: "System monitoring and performance overview"
  }) }}

  {% if error %}
    {{ govukWarningText({
      text: error,
      iconFallbackText: "Warning"
    }) }}
  {% else %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <p class="govuk-body-s govuk-!-margin-bottom-6">
          Last updated: <strong>{{ lastUpdated }}</strong>
        </p>
      </div>
    </div>

    {# Health Status Section #}
    <div class="govuk-grid-row govuk-!-margin-bottom-6">
      <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-l">System Health</h2>
        
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-one-half">
            <h3 class="govuk-heading-m">Basic Health Check</h3>
            {% if health.basic.available %}
              {{ govukSummaryList({
                rows: [
                  {
                    key: {
                      text: "Status"
                    },
                    value: {
                      html: govukTag({
                        text: health.basic.status.text,
                        classes: health.basic.status.class
                      })
                    }
                  },
                  {
                    key: {
                      text: "Last check"
                    },
                    value: {
                      text: health.basic.timestamp
                    }
                  }
                ]
              }) }}
            {% else %}
              {{ govukWarningText({
                text: "Basic health check unavailable",
                iconFallbackText: "Warning"
              }) }}
            {% endif %}
          </div>

          <div class="govuk-grid-column-one-half">
            <h3 class="govuk-heading-m">System Health Check</h3>
            {% if health.system.available %}
              {{ govukSummaryList({
                rows: [
                  {
                    key: {
                      text: "Overall Status"
                    },
                    value: {
                      html: govukTag({
                        text: health.system.status.text,
                        classes: health.system.status.class
                      })
                    }
                  },
                  {
                    key: {
                      text: "Database"
                    },
                    value: {
                      html: govukTag({
                        text: health.system.checks.database_connectivity | capitalize,
                        classes: "govuk-tag--green" if health.system.checks.database_connectivity == "healthy" else "govuk-tag--red"
                      })
                    }
                  },
                  {
                    key: {
                      text: "Error Rate"
                    },
                    value: {
                      text: health.system.checks.error_rate.value + "% (threshold: " + health.system.checks.error_rate.threshold + "%)"
                    }
                  }
                ]
              }) }}
            {% else %}
              {{ govukWarningText({
                text: "System health check unavailable",
                iconFallbackText: "Warning"
              }) }}
            {% endif %}
          </div>

        </div>
      </div>
    </div>

    {# Token Usage & Cost Section #}
    {% set periods = [
      { 'label': 'Day', 'data': tokenUsageDay },
      { 'label': 'Week', 'data': tokenUsageWeek },
      { 'label': 'Month', 'data': tokenUsageMonth },
      { 'label': 'Year', 'data': tokenUsageYear }
    ] %}

    {% for period in periods %}
      {% if period.data %}
        <div class="govuk-grid-row govuk-!-margin-bottom-6">
          <div class="govuk-grid-column-full">
            <h2 class="govuk-heading-l">Token Usage &amp; Cost ({{ period.label }})</h2>
            <dl class="govuk-summary-list">
              <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Period (hours)</dt>
                <dd class="govuk-summary-list__value">{{ period.data.period_hours }}</dd>
              </div>
              <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Cutoff Time</dt>
                <dd class="govuk-summary-list__value">{{ period.data.cutoff_time }}</dd>
              </div>
            </dl>
            <h3 class="govuk-heading-m">Per Model</h3>
            {% if period.data.models and period.data.models.items and period.data.models.items()|length > 0 %}
              <table class="govuk-table">
                <thead class="govuk-table__head">
                  <tr class="govuk-table__row">
                    <th class="govuk-table__header">Model</th>
                    <th class="govuk-table__header">Input Tokens</th>
                    <th class="govuk-table__header">Output Tokens</th>
                    <th class="govuk-table__header">Executions</th>
                    <th class="govuk-table__header">Cost (USD)</th>
                    <th class="govuk-table__header">Cost (GBP)</th>
                  </tr>
                </thead>
                <tbody class="govuk-table__body">
                  {% for model_id, model in period.data.models.items() %}
                  <tr class="govuk-table__row">
                    <td class="govuk-table__cell">{{ model.name }}</td>
                    <td class="govuk-table__cell">{{ model.input_tokens }}</td>
                    <td class="govuk-table__cell">{{ model.output_tokens }}</td>
                    <td class="govuk-table__cell">{{ model.executions }}</td>
                    <td class="govuk-table__cell">{{ model.total_cost_usd }}</td>
                    <td class="govuk-table__cell">{{ model.total_cost_gbp }}</td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            {% else %}
              <p class="govuk-body">No model data available for this period.</p>
            {% endif %}
            <h3 class="govuk-heading-m">Overall</h3>
            <dl class="govuk-summary-list">
              <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Input Tokens</dt>
                <dd class="govuk-summary-list__value">{{ period.data.overall.input_tokens }}</dd>
              </div>
              <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Output Tokens</dt>
                <dd class="govuk-summary-list__value">{{ period.data.overall.output_tokens }}</dd>
              </div>
              <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Total Cost (USD)</dt>
                <dd class="govuk-summary-list__value">{{ period.data.overall.total_cost_usd }}</dd>
              </div>
              <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Total Cost (GBP)</dt>
                <dd class="govuk-summary-list__value">{{ period.data.overall.total_cost_gbp }}</dd>
              </div>
            </dl>
          </div>
        </div>
      {% endif %}
    {% endfor %}

    {# Dashboard Summary Section #}
    {% if dashboard.available %}
    <div class="govuk-grid-row govuk-!-margin-bottom-6">
      <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-l">Dashboard Summary (Last {{ dashboard.periodHours }} hours)</h2>
        
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-one-third">
            <div class="app-stat-card">
              <h3 class="govuk-heading-s govuk-!-margin-bottom-2">Total Executions</h3>
              <p class="govuk-heading-xl govuk-!-margin-bottom-1">{{ dashboard.summary.executions.total }}</p>
              <p class="govuk-body-s">
                {{ dashboard.summary.executions.successful }} successful, 
                {{ dashboard.summary.executions.failed }} failed
              </p>
            </div>
          </div>
          
          <div class="govuk-grid-column-one-third">
            <div class="app-stat-card">
              <h3 class="govuk-heading-s govuk-!-margin-bottom-2">Success Rate</h3>
              <p class="govuk-heading-xl govuk-!-margin-bottom-1">{{ dashboard.summary.executions.successRate }}</p>
              <p class="govuk-body-s">Average duration: {{ dashboard.summary.executions.avgDuration }}</p>
            </div>
          </div>
          
          <div class="govuk-grid-column-one-third">
            <div class="app-stat-card">
              <h3 class="govuk-heading-s govuk-!-margin-bottom-2">Security Events</h3>
              <p class="govuk-heading-xl govuk-!-margin-bottom-1">{{ dashboard.summary.security.low or 0 }}</p>
              <p class="govuk-body-s">Low severity events</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endif %}

    {# Performance Metrics Section #}
    {% if performance.available %}
    <div class="govuk-grid-row govuk-!-margin-bottom-6">
      <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-l">Performance Metrics</h2>
        
        {{ govukTable({
          head: [
            {
              text: "Metric"
            },
            {
              text: "Value"
            }
          ],
          rows: [
            [
              {
                text: "Total Executions"
              },
              {
                text: performance.metrics.totalExecutions
              }
            ],
            [
              {
                text: "Success Rate"
              },
              {
                text: performance.metrics.successRate
              }
            ],
            [
              {
                text: "Average Duration"
              },
              {
                text: performance.metrics.avgDuration
              }
            ],
            [
              {
                text: "Min/Max Duration"
              },
              {
                text: performance.metrics.minDuration + " / " + performance.metrics.maxDuration
              }
            ],
            [
              {
                text: "Avg Documents Retrieved"
              },
              {
                text: performance.metrics.avgDocumentsRetrieved
              }
            ]
          ]
        }) }}
      </div>
    </div>
    {% endif %}

    {# Security Events Section #}
    {% if security.events.available and security.events.count > 0 %}
    <div class="govuk-grid-row govuk-!-margin-bottom-6">
      <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-l">Recent Security Events</h2>
        
        {{ govukTable({
          head: [
            {
              text: "Timestamp"
            },
            {
              text: "Event Type"
            },
            {
              text: "Severity"
            },
            {
              text: "Details"
            }
          ],
          rows: security.events.tableRows
        }) }}
      </div>
    </div>
    {% endif %}

    {# Recent Executions Section #}
    {% if executions.available and executions.count > 0 %}
    <div class="govuk-grid-row govuk-!-margin-bottom-6">
      <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-l">Recent Executions</h2>
        
        {{ govukTable({
          head: [
            {
              text: "Execution ID"
            },
            {
              text: "Timestamp"
            },
            {
              text: "Status"
            },
            {
              text: "Duration"
            },
            {
              text: "Documents"
            },
            {
              text: "Actions"
            }
          ],
          rows: executions.tableRows
        }) }}
      </div>
    </div>
    {% endif %}

  {% endif %}

  <style>
    .app-stat-card {
      background: #f3f2f1;
      padding: 20px;
      border-left: 4px solid #1d70b8;
      margin-bottom: 20px;
    }
  </style>

{% endblock %}