{% extends "layouts/page.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukPanel({
        titleText: "Feedback submitted",
        html: "Thank you for helping us improve the AI Assistant"
      }) }}

      <h2 class="govuk-heading-m">What happens next</h2>

      <p class="govuk-body">
        We review all feedback to help us improve the AI Assistant. We cannot respond to individual submissions.
      </p>

      <p class="govuk-body">
        If you need help with a specific issue, contact your line manager or IT support.
      </p>

      <p class="govuk-body">
        <a href="/start" class="govuk-link">Return to AI Assistant</a>
      </p>

    </div>
  </div>
{% endblock %}

